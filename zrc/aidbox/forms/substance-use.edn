            {:type aidbox.sdc/row
             :children [{:bind [:drug :dsm :dsm-drug-11]}]}
            {:bind [:dsm-drug-score]
             :label "Patient has Substance Use Disorder based on DSM-5 Criteria"}]}]}
        {:type aidbox.sdc/row
         :sdc/display-when (lisp/get :enable-dsm-drug-help-questions)
         :children
         [{:bind [:drug :substance-use-drug-help-before]}
