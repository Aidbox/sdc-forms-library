 SubstanceUseLayout
 {:zen/tags #{aidbox.sdc/Layout aidbox.sdc/rules}
  :document SubstanceUseDocument
  :engine aidbox.sdc/Hiccup
  :sdc/rules {:enable-nicotine (lisp/get-in [:nicotine :substance-use-nicotine])
              :enable-alcohol (lisp/get-in [:alcohol :substance-use-alcohol])
              :enable-other-nicotine (lisp/> (lisp/count (lisp/matcho-filter (lisp/get-in [:nicotine :substance-use-nicotine-types])
                                                                             {:code "nicotine-other"})) 0)

              :enabled-dsm-alcohol (lisp/get-in [:alcohol :dsm-enabled-alcohol])
              :enable-dsm-alcohol-help-questions (lisp/>= (lisp/get :dsm-alcohol-score) 2)

              :enable-other-drug (lisp/> (lisp/count (lisp/matcho-filter (lisp/get-in [:drug :substance-use-drug-types])
                                                                         {:code "drug-other"})) 0)
              :possible-drug-dsm (lisp/> (lisp/-
                                          (lisp/count (lisp/get-in [:drug :substance-use-drug-types]))
                                          (lisp/count (lisp/matcho-filter (lisp/get-in [:drug :substance-use-drug-types])
                                                                          {:code "398705004"})))
                                         0)
              :enabled-dsm-drug (lisp/if (lisp/get :possible-drug-dsm)
                                  (lisp/get-in [:drug :dsm-enabled-drug-yes-default])
                                  (lisp/get-in [:drug :dsm-enabled-drug]))
              :enable-dsm-drug-help-questions (lisp/>= (lisp/get :dsm-drug-score) 2)}
  :layout
  {:type aidbox.sdc/col
   :children
   [;; Nicotine Section
    {:bind [:nicotine :substance-use-nicotine]}
    {:type aidbox.sdc/fields
     :children
     [{:type aidbox.sdc/fields
       :sdc/display-when (lisp/get :enable-nicotine)
       :children
       [{:bind [:nicotine :substance-use-nicotine-types]}
        {:bind [:nicotine :substance-use-nicotine-other]
         :sdc/display-when (lisp/get :enable-other-nicotine)}
        {:bind [:nicotine :substance-use-nicotine-currently]}
        {:bind [:nicotine :substance-use-nicotine-frequency]
         :sdc/display-when (lisp/get-in [:nicotine :substance-use-nicotine-currently])}
        {:bind [:nicotine :substance-use-nicotine-document-use]}
        {:bind [:nicotine :substance-use-nicotine-20-pack]}
        {:bind [:nicotine :substance-use-nicotine-cessation-interest]}]}]}

    ;; Alcohol Section
    {:bind [:alcohol :substance-use-alcohol]}
    {:type aidbox.sdc/fields
     :children
     [{:type aidbox.sdc/fields
       :sdc/display-when (lisp/get :enable-alcohol)
       :children
       [{:bind [:alcohol :substance-use-alcohol-types]}
        {:bind [:alcohol :substance-use-alcohol-frequency]}
        {:bind [:alcohol :substance-use-alcohol-frequency-qualifier]}
        {:bind [:alcohol :substance-use-alcohol-comments]}
        {:bind [:alcohol :dsm-enabled-alcohol]
         :sdc/display-when (lisp/or
                            (lisp/not (lisp/get-in [:alcohol :substance-use-alcohol-frequency :value]))
                            (lisp/< (lisp/get-in [:alcohol :substance-use-alcohol-frequency :value]) 7))}
        {:bind [:alcohol :dsm-enabled-alcohol-yes-default]
         :sdc/display-when (lisp/>= (lisp/get-in [:alcohol :substance-use-alcohol-frequency :value]) 7)}
        {:type aidbox.sdc/fields
         :children
         [{:type aidbox.sdc/fields
           :sdc/display-when (lisp/if
                              (lisp/or
                               (lisp/not (lisp/get-in [:alcohol :substance-use-alcohol-frequency :value]))
                               (lisp/< (lisp/get-in [:alcohol :substance-use-alcohol-frequency :value]) 7))
                               (lisp/get-in [:alcohol :dsm-enabled-alcohol])
                               (lisp/get-in [:alcohol :dsm-enabled-alcohol-yes-default]))
           :children [{:type aidbox.sdc/fields
