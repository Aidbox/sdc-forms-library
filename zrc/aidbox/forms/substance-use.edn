                        {:type aidbox.sdc/row,
                         :children [{:bind [:alcohol :dsm :dsm-alcohol-5]}]}
                        {:type aidbox.sdc/row,
                         :children [{:bind [:alcohol :dsm :dsm-alcohol-6]}]}
                        {:type aidbox.sdc/row,
                         :children [{:bind [:alcohol :dsm :dsm-alcohol-7]}]}
                        {:type aidbox.sdc/row,
                         :children [{:bind [:alcohol :dsm :dsm-alcohol-8]}]}
                        {:type aidbox.sdc/row,
