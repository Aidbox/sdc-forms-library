                         :label "**Over the past 12 months, has the patient had any of below:**"}
                        {:type aidbox.sdc/row,
                         :children [{:bind [:alcohol :dsm :dsm-alcohol-1]}]}
                        {:type aidbox.sdc/row,
                         :children [{:bind [:alcohol :dsm :dsm-alcohol-2]}]}
                        {:type aidbox.sdc/row,
                         :children [{:bind [:alcohol :dsm :dsm-alcohol-3]}]}
                        {:type aidbox.sdc/row,
