 SubstanceUseLaunch
 {:zen/tags #{aidbox.sdc/Launch}
  :document SubstanceUseDocument
  :params {:encounter-id {:type zen/string}}
  :populate-engine aidbox.sdc/LispPopulate
  :populate {:author    (lisp/get-in [:ctx :user])
             :encounter {:id (lisp/get-in [:params :encounter-id]) :resourceType "Encounter"}
             :patient   (lisp/sql {:select [:#> :resource [:subject]]
                                   :from :Encounter
                                   :where [:= :id (lisp/get-in [:params :encounter-id])]})
             :nicotine (lisp/sql {:select [:#> :resource [:nicotine]]
                                  :from :SDCDocument
                                  :where [:and
                                          [:= [:#>> :resource [:status]] "completed"]
                                          [:= [:#>> :resource [:form :form]] "aidbox.forms.substance-use/SubstanceUseForm"]]
                                  :order-by [:pg/desc :ts]
                                  :limit 1})
             :alcohol (lisp/sql {:select [:#> :resource [:alcohol]]
                                 :from :SDCDocument
                                 :where [:and
                                         [:= [:#>> :resource [:status]] "completed"]
                                         [:= [:#>> :resource [:form :form]] "aidbox.forms.substance-use/SubstanceUseForm"]]
                                 :order-by [:pg/desc :ts]
                                 :limit 1})}}

 SubstanceUseFinalize
 {:zen/tags #{aidbox.sdc/Finalize zen/schema}
  :document SubstanceUseDocument
  :export-engine aidbox.sdc/LispExport
  :create [;; Extract tobacco smoking status
           (lisp/if
            (lisp/not (lisp/nil? (lisp/get-in [:nicotine :substance-use-nicotine])))
             {:resourceType "Observation"
              :status "final"
              :subject (lisp/get :patient)
              :encounter (lisp/get :encounter)
              :category [{:coding [{:system "http://terminology.hl7.org/CodeSystem/observation-category"
                                    :code "social-history"}]}]
              :effective {:dateTime (lisp/date)}
              :issued (lisp/date)
              :code {:text "Tobacco smoking status"
                     :coding [{:system "http://loinc.org" :display "Tobacco smoking status NHIS" :code "72166-2"}]}
              :value
              {:CodeableConcept
               {:coding
                [(lisp/cond
                   (lisp/not (lisp/get-in [:nicotine :substance-use-nicotine]))
                   {:system "http://loinc.org" :code "LA18978-9" :display "Never smoker"}

                   (lisp/not (lisp/get-in [:nicotine :substance-use-nicotine-currently]))
                   {:system "http://loinc.org" :code "LA15920-4" :display "Former smoker"}

                   :else (lisp/get-in [:nicotine :substance-use-nicotine-frequency]))]}}})

           ;; Extract Details of alcohol drinking behavior
           (lisp/for [lisp/i (lisp/get-in [:alcohol :substance-use-alcohol-types])]
             {:resourceType "Observation"
              :status "final"
              :encounter (lisp/get :encounter)
              :subject (lisp/get :patient)
              :category [{:coding [{:system "http://terminology.hl7.org/CodeSystem/observation-category"
                                    :code "social-history"}]}]
              :effective {:dateTime (lisp/date)}
              :issued (lisp/date)
              :code {:text "SHX Alcohol type"
