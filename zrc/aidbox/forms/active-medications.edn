 {:zen/tags #{aidbox.sdc/Layout}
  :engine aidbox.sdc/Hiccup
  :layout
  {:type aidbox.sdc/col
   :children
   [{:bind [:drug-name]}
    {:bind [:sig]}
    {:type aidbox.sdc/row
     :children [{:bind [:dispense]}
                {:bind [:refill]}]}
    {:type aidbox.sdc/row
